rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection (DIREVISI: Update lebih aman)
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, delete: if isSignedIn() && isOwner(userId);
      
      // Izinkan update: Hanya pemilik yang bisa update name/photoUrl/friends
      // DAN izinkan pengguna lain HANYA memodifikasi 'friends' (misalnya, saat accept friend request)
      allow update: if isSignedIn() && (
        isOwner(userId) ||
        // Izinkan arrayUnion/arrayRemove pada friends oleh pengguna lain.
        // Ini diasumsikan aman karena hanya memengaruhi daftar friends.
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends']))
      );
    }
    
    // Activities collection (DIREVISI: Read Permission untuk yang diundang)
    match /activities/{activityId} {
      allow read: if isSignedIn() && (
        resource.data.createdBy == request.auth.uid ||
        request.auth.uid in resource.data.members ||
        // KUNCI: Izinkan baca jika UID ada di array 'invitedUids' (jika Anda menggunakannya)
        request.auth.uid in resource.data.invitedUids 
      );
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      
      // PENTING: Update aktivitas hanya oleh pembuat ATAU untuk menambah members/invitedUids (saat accept invitation)
      allow update: if isSignedIn() && (
        // Pembuat bisa update apapun
        resource.data.createdBy == request.auth.uid ||
        // User yang diundang hanya bisa update members dan invitedUids (accept invitation)
        (request.auth.uid in resource.data.get('invitedUids', []) &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'invitedUids']))
      );
      
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }
    
    // Receipts collection (OK)
    match /receipts/{receiptId} {
      allow read, create, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Friend requests (OK)
    match /friendRequests/{requestId} {
      allow read: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid ||
        resource.data.toUid == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.fromUid == request.auth.uid;
      // Izinkan update/delete oleh pengirim (cancel) atau penerima (accept/decline) (OK)
      allow update, delete: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid ||
        resource.data.toUid == request.auth.uid
      );
    }
    
    // Activity invitations (OK)
    match /activityInvitations/{invitationId} {
      allow read: if isSignedIn() && (
        resource.data.invitorUid == request.auth.uid ||
        resource.data.invitedUid == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.invitorUid == request.auth.uid;
      // Izinkan update/delete oleh pengundang (cancel) atau yang diundang (accept/decline) (OK)
      allow update, delete: if isSignedIn() && (
        resource.data.invitorUid == request.auth.uid ||
        resource.data.invitedUid == request.auth.uid
      );
    }
    
    // Notifications (OK)
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.toUserId == request.auth.uid;
      // Izinkan siapa saja membuat notifikasi (misalnya, server/cloud function) (OK)
      allow create: if isSignedIn(); 
      allow update, delete: if isSignedIn() && resource.data.toUserId == request.auth.uid;
    }
  }
}